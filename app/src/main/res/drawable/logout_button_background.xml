<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer for slight elevation -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/strokeColor" />
        </shape>
    </item>

    <!-- Gradient background for the button -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/logoutColor"
                android:endColor="@color/buttonColor1"
                android:angle="45" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
